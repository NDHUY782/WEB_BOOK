<% 
    selectBoxGroupHelper = (name,items,optionSelected = '') => {
        let xhtmlGroup = '';

        items.forEach((item) =>{

            let selected = (item.id == optionSelected) ? `selected ="selected"` : '';
            let id = (item.id == undefined) ? 'novalue' : item.id; 

            xhtmlGroup += `<option value="${id}" ${selected} >${item.name}</option>`;
            
        });
        return `<select name="${name}" class="custom-select custom-select-sm">${xhtmlGroup}</select>`;
    }    
%>

