<%
    const folderUpload = 'uploads/items/'
%>
<!-- Hero Section
            ============================================= -->
<section id="slider" class="slider-element min-vh-md-100 vh-50 blog_slider"
    style="background-image: linear-gradient(to bottom, rgba(255,255,255,.8), rgba(255,255,255,0)), url('<%= folderUpload%><%= data_blog_detail.avatar%>'); background-position: center 10%; background-size: cover;">

    <div class="container">

        <!-- Hero Text
                    ============================================= -->
        <div class="row min-vh-md-100 vh-50 justify-content-center align-items-md-start align-items-center pt-md-5">
            <!-- <div class="col-lg-6 mt-lg-3"> -->
            <div class="title-slide">
                <p class="op-07 mb-3 text-uppercase ls2 text-smaller">Sách Đặc Biệt</p>
                <h1 class="display-4 fw-medium mb-5"><%= data_blog_detail.name%></h1>
            </div>
        </div>

    </div>

</section>

<!-- Content
            ============================================= -->
<section id="content">
    <div class="content-wrap py-0">
        <!-- 2. Section
                    ============================================= -->
        <div class="section bg-transparent my-0 py-0">
            <div class="container-fluid">
                <!-- 1 -->
                <div class="row align-items-md-center blog_detail">
                    <!-- Image -->
                    <div class="col-md-6 px-lg-0 min-vh-50 min-vh-lg-75 d-flex align-self-stretch"
                        style="background: url('<%=folderUpload%><%= data_blog_detail.avatar%>') no-repeat center center; background-size: cover;">
                    </div>

                    <!-- Content -->
                    <div class="col-md-6 p-5 p-lg-6">
                        <h3 class="h3 bottommargin fw-medium px-lg-5">1.<%= data_blog_detail.name%></h3>
                        <p class="m-0 px-lg-5"><%- data_blog_detail.content%></p>
                    </div>
                </div>

                <div class="clear"></div>

                <!-- 2 -->
                <div class="row flex-md-row-reverse align-items-md-center blog_detail">
                    <!-- Image -->
                    <div class="col-md-6 px-lg-0 min-vh-50 min-vh-lg-75 d-flex align-self-stretch"
                        style="background: url('frontend/demos/furniture/images/about/2.jpg') no-repeat center center; background-size: cover;">
                    </div>

                    <!-- Content -->
                    <div class="col-md-6 p-5 p-lg-6">
                        <h3 class="h3 bottommargin fw-medium px-lg-5">2. No Extra Charges for Shipping</h3>
                        <p class="m-0 px-lg-5">ffffffffffffff</p>
                    </div>
                </div>

                <div class="clear"></div>
            </div>
        </div> 
    </div>
</section>
<script src="/socket.io/socket.io.js"></script>
	<script>
	var socket = io();
    socket.emit('router_user','blog')
	</script>