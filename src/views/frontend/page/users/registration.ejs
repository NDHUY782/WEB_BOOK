    <section id="content">
        <div class="content-wrap py-0">

            <div class="section move-bg min-vh-100 w-100 position-absolute m-0 p-0" style="background: url('demos/writer/images/login.jpg') center center no-repeat; background-size: cover;"></div>

            <div class="section bg-transparent min-vh-100 d-flex m-0 p-0">
                <div class="vertical-middle">
                    <div class="container-fluid py-5 py-lg-0 mx-auto">

